<div class="task">
    <div class="task__header">
        <div class="task__name">{{name}}</div>
        <img src="./images/show-more-button-with-three-dots.png" alt="show more btn" class="task__smb">
    </div>
    <div class="task__description">
        <p>{{description}}</p>
    </div>

    <div class="task__footer">
        <div class="date__container">
            <img src="./images/timetable.png" class="date__img">
            <span class="task__date">{{date}}</span>
        </div>
        <div class="task__priority high">{{priority}}</div>
    </div>
</div>